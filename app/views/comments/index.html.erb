<%= link_to "New Comment", new_comment_path %>

<div class="commentbox">
  <table>
    <thead>
      <tr>
        <th>
          Username:
        </th>
        <th>
          Comment:
        </th>
      </tr>
    </thead>
    <tbody>
      <% @comments.each do |comment| %>
      <tr>
        <td>
          <%= "#{comment.user.username}" %>
        </td>
        <td>
          <%= "#{comment.title}" %>
        </td>
        <td>
          <%= "#{comment.text}" %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <% unless current_user == nil %>
    <%= link_to "Add Comment", new_comment_path %>
  <% end %>
  <% unless current_user %>
    <h3>Please sign in to leave a comment</h3>
</div>
