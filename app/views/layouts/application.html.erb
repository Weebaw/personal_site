<!DOCTYPE html>
<html>
<head>
  <title>PersonalSite</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if current_user %>
   <%= link_to “Sign me out”, sign_out_path %>
  <% else %>
    <%= link_to "Sign In", sign_in_path %>
  <% end %>

  <%= yield %>

</body>
</html>
